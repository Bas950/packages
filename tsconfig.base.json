{
	"exclude": ["**/*/lib/**/*", "**/*/bin/**/*", "**/*/__mocks__/**/*", "**/*/__tests__/**/*", "**/vitest.config.ts", "**/*.test.ts"],
	"compilerOptions": {
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
